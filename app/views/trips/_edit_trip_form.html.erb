<button id="myBtn">Edit Trip Info</button>
<div id="edit-trip-modal" class="modal">
<div class="modal-content">
<body>
<%= form_with(model: trip, local: true) do |form| %>
  <% if trip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

      <ul>
      <% trip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <button type="button" class="close" id="closeEdit" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
<div class="edit_trip_form">
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :trip_name %>
  </div>

  <div class="field">
    <%= form.label :accommodation_url %>
    <%= form.text_field :accomodation_url, id: :trip_accomodation_url %>
  </div>

  <div class="field">
    <%= form.label :start_location %>
    <%= form.text_field :start_location, id: :trip_start_location %>
  </div>

    <div class="field">
    <%= form.label :end_location %>
    <%= form.text_field :end_location, id: :trip_end_location %>
  </div>

  <div class="field">
    <%= form.label :price_per_night %>
    <%= form.number_field :price_per_night, :step => 0.01, :min => 0, id: :trip_price_per_night %>
  </div>

  <div class="field">
    <%= form.label :number_of_possible_attendees %>
    <%= form.number_field :number_of_possible_attendees, :min => 0, id: :trip_number_of_possible_attendees %>
  </div>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_select :start_date, id: :trip_start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_select :end_date, id: :trip_end_date %>
  </div>

  <div class="field">
    <%= form.hidden_field :total_possible_cost, :value => 0 %>
  </div>
  
  <div class="field">
    <%= form.hidden_field :total_confirmed_cost, :value => 0 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>
</body>
</div>
</div>
<style>
.modal {
    display: none; /* Hidden by default */
    position: fixed; /* Stay in place */
    z-index: 1; /* Sit on top */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgb(0,0,0); /* Fallback color */
    background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
}

/* Modal Content/Box */
.modal-content {
    background-color: #fefefe;
    margin: 15% auto; /* 15% from the top and centered */
    padding: 20px;
    border: 1px solid #888;
    border-radius: 10px;
    width: 80%; /* Could be more or less, depending on screen size */
}

/* The Close Button */
.close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
}

.close:hover,
.close:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
}
</style>



<script>
(function(){

// Get the modal
var modal = document.getElementById('edit-trip-modal');

// Get the button that opens the modal
var btn = document.getElementById("myBtn");


// When the user clicks on the button, open the modal 
btn.onclick = function() {
    modal.style.display = "block";
}

$(document).ready(function() {
  $("#closeEdit").on("click", function(event) {
      $('#edit-trip-modal').hide();
      $('.modal-backdrop').hide();
  });
});

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}
})();
</script>