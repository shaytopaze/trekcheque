
<head>
<script type="text/javascript">
function scrollto(div) {
	document.getElementById(div).scrollIntoView(true);
}
</script>
</head>
<body>

<div id="top-half">
<div id="background-video" style="opacity: .8;">
  <%= video_tag("The-Truck.mp4", autoplay: :autoplay, loop: :loop) %>
</div>
<h1 class="trekcheque">
<div id="login-header">
<span onclick="scrollto('login-container');">Login | Register</span>
<span onclick="scrollto('about');"> | About</span>
</div>
TREK CHEQUE<br>
<div class="trekcheque"> A road trip expense app, keeping friendships friendly
</div>
</h1>
</div>

<div class="container" id="login-container">
    	<div class="row" id="login-row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row" role='tablist'>
							<div class="col-xs-6" role='presentation'>
								<a href="#login" id="login-form-link" aria-controls="login" role="tab" data-toggle="tab">Login</a>
							</div>
							<div class="col-xs-6" role='presentation' >
								<a href="#register" id="register-form-link" aria-controls="register" role="tab" data-toggle="tab">Register</a>
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row tab-content">
							<div class="col-lg-12 tab-pane active" role="tabpanel" id="login">
							<%= form_tag "/login", id: 'login-form', role: 'form', style: "display:block;" do %>
								<div class="form-group">
									<input type="email" name="email" tabindex="1" class='form-control' placeholder='Email' id='login-email' %>
								</div>
								<div class="form-group">
									<input type="password" name="password" tabindex="2" class="form-control" placeholder="Password">
								</div>
								<div class="form-group">
									<div class="row">
										<div class="col-sm-6 col-sm-offset-3">
											<input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Log In">
										</div>
									</div>
								</div>
								<div class="form-group">
									<div class="row">
										<div class="col-lg-12">
										</div>
									</div>
								</div>

							<% end %>
							</div>
							<div class="col-lg-12 tab-pane" role="tabpanel" id="register">
                  <%= form_for user, {id: 'register-form', role: 'form', style: 'display:block;'} do |form| %>
								<div class="form-group">
								  <%= form.text_field :name, {id: :user_name, class: 'form-control', placeholder: 'Name'} %>
								</div>
								<div class="form-group">
								     <%= form.email_field :email, {id: :user_email, class: 'form-control', placeholder: 'Email'} %>
								</div>
								<div class="form-group">
								    <%= form.password_field :password, {id: :user_password, class: 'form-control', placeholder: 'Password'} %>
								</div>
								<div class="form-group">
									<%= form.password_field :password_confirmation, {id: :user_password_confirmation, class: 'form-control', placeholder: 'Password Confirmation'} %>
								</div>
								<div class="form-group">
									<div class="row">
										<div class="col-sm-6 col-sm-offset-3">
										    <%= form.submit name: 'register-submit', id: 'register-submit', tabindex: '4', class: 'form-control btn btn-register', value: 'Register' %>
										</div>
										<% end %>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="container" id="about">
  <h2>INFORMATION ABOUT OUR APP</h2>
</div>
</body>